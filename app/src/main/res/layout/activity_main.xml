<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textViewDangNhapHeThong"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#4CAF50"

        android:gravity="center"
        android:text="Đăng Nhập Hệ Thống"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTaiKhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tài khoản : "
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edtTaiKhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Không được để trống"
            android:inputType="textPersonName" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewMatKhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mật khẩu : "
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edtMatKhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Không được để trống"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:gravity="right"
        android:orientation="vertical"
        tools:visibility="visible">

        <CheckBox
            android:id="@+id/cboLuuThongTin"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Lưu thông tin" />

        <Button
            android:id="@+id/btnDangNhap"
            android:layout_width="279dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:text="Đăng nhập" />

        <Button
            android:id="@+id/btnThoat"
            android:layout_width="158dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:text="Thoát" />

    </LinearLayout>
</LinearLayout>